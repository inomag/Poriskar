<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Pratik Gupta"
                    android:fontFamily="@font/worksans_medium"
                    android:textSize="20sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textColor="#000000"/>
                <TextView
                    android:id="@+id/user_tag_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="#77"
                    android:layout_marginStart="5dp"
                    android:textSize="20sp"
                    android:fontFamily="@font/worksans_mediumitalic"
                    android:textColor="@color/lightblue"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    app:srcCompat="@drawable/ic_phone_outlined"
                    app:tint="#292929" />

                <View
                    android:layout_width="10dp"
                    android:layout_height="0dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="7231854995"
                    android:textSize="16sp"
                    android:fontFamily="@font/worksans_light"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textColor="#292929" />

            </LinearLayout>

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:gravity="center"
            android:minWidth="0dp"
            android:backgroundTint="@color/lightblue"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="UPLOAD" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

            <ImageView
                android:id="@+id/setImage"

                android:layout_width="300dp"
                android:layout_height="300dp"
               />




<!--        <EditText-->
<!--            android:id="@+id/post_text"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="0dp"-->
<!--            android:layout_weight="0.5"-->
<!--            android:background="@android:color/transparent"-->
<!--            android:gravity="top"-->
<!--            -->
<!--            android:hint="Enter Address"-->
<!--            android:inputType="textLongMessage"-->
<!--            android:padding="15dp"-->
<!--            android:textSize="14dp" />-->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:padding="10dp"
            app:hintEnabled="false"
            app:boxStrokeColor="@color/black"
            app:boxBackgroundColor="@color/minimal">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/post_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Address..."
                android:singleLine="false"
                android:fontFamily="@font/worksans_light"
                android:inputType="textLongMessage"/>
        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#e5e5e5"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/bt_photo"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="#2C2C2C"
            app:srcCompat="@drawable/ic_camera" />

        <ImageButton
            android:id="@+id/bt_link"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="#2c2c2c"
            app:srcCompat="@drawable/ic_link" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />


    </LinearLayout>

</LinearLayout>