<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Days+One&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/assign.css">
    <title>Hello, world!</title>
</head>

<body>

    <!-- NAVBAR -->

    <div class="navbar">
        <p id="logo">PORISKAR</p>
        <div class="navbar-right">
            <ul>
                <li><a id="home_link" href="/">Home</a></li>
                <li><a href="/drivers">Drivers</a></li>
                <li><a href="/routes">Routes</a></li>

                <% if(user) { %>
                    <li><a id="login_link" href="/logout">Log out</a></li>
                    <% } else { %>
                        <li><a id="login_link" href="/login">Log in</a></li>
                        <% } %>

            </ul>
        </div>
    </div>


    <!-- MONDAY -->

    <form class="formAssignRoutes" method="POST" action="/drivers/assign-route">
        <div class="weekdayHeader">Monday</div>
        <div class="assignContainer">

            <fieldset class="driverFieldset">

                <% drivers.forEach(driver => {  %>

                    <p><input type="radio" name="driverId" value="<%= driver.id %>" class="driverCheckbox"><span class="checkboxText">
                        &nbsp&nbsp&nbsp
                        <%= driver.name %> 
                        </span></p>

                    <% }); %>
            </fieldset>


            <fieldset class="routeFieldset">

                <% routes.forEach(route => {  %>

                    <% if(route.id !== 0) {%>

                        <p><input type="radio" name="route" value="<%= route.id %>" class="routeCheckbox"><span class="checkboxText">
                        &nbsp&nbsp&nbsp
                        <%= route.name %>
                    </span></p>
                        <% } %>

                            <% }); %>
            </fieldset>
            <div class="btnAssignContainer">
                <div class="btnAssign">
                    <button type="submit" id="btn_assign_route"> Assign </button>
                </div>
            </div>
        </div>
        </div>
    </form>

    <script src="/js/assign.js"></script>
</body>

</html>